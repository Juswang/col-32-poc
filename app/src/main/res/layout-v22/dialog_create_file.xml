<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:padding="18dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <TextView android:id="@+id/label" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="@string/enter_filename" android:layout_weight="1" android:labelFor="@+id/fileName"/>
    <EditText android:id="@+id/fileName" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:ems="10" android:layout_weight="1" android:inputType="text" android:autofillHints=""/>
    <TextView android:id="@+id/overwriteWarning" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:text="@string/file_exists_warning" android:layout_weight="1"/>
</LinearLayout>
